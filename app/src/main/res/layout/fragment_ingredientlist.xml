<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView android:layout_width="match_parent" android:layout_height="40dp" android:id="@+id/header_title"
              android:textColor="@color/white"
              android:text="Blah"
              app:layout_constraintTop_toTopOf="parent"/>
    <android.widget.GridLayout
            app:layout_constraintTop_toBottomOf="@id/header_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:columnCount="4"
            android:alignmentMode="alignBounds"
            android:id="@+id/ingredientlist"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layoutDirection="inherit" android:clickable="true" android:clipToPadding="false"
            android:fadeScrollbars="true" android:layout_marginHorizontal="4dp">
    </android.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>